@model IEnumerable<tp_5.Models.Produit>

@{
    ViewData["Title"] = "My Cart";
}

<h1>My Products</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produit in Model)
            {
                <tr>
                    <td>@produit.Name</td>
                    <td>@produit.Price.ToString("C")</td>
                    <td>@produit.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}